source 'https://rubygems.org'

# easily parse INI files
gem 'inifile'
# easy process memory inspection
gem 'get_process_mem'
# tarball manipulation
gem 'minitar'
# use generator pattern
gem 'eventmachine'
# rabbitmq bindings
gem 'bunny'
# resource usage
gem 'usagewatch'
# test rest api via rspec
gem 'airborne'
# sinatra for restapi
gem 'async_sinatra'
# thin client for sinatra
gem 'thin'
# s3 sdk
gem 'aws-sdk-s3'
# sinatra websockets
gem 'sinatra-websocket'
# password hashing
gem 'bcrypt'
# for mojang auth with POST
gem 'httparty'
# for pam auth (may require pam-devel system package)
gem 'rpam2'
# for unzipping archives
gem 'rubyzip'
